{
  "name": "mangadex-hover-info",
  "short_name": "MHI",
  "description": "",
  "version": "0.1.0",
  "manifest_version": 2,
  "content_scripts": [
    {
      "css": [
        "style.css"
      ],
      "js": [
        "main.js"
      ],
      "matches": [
        "*://mangadex.org/follows*"
      ],
      "run_at": "document_end"
    }
  ],
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "tabs",
    "webRequest",
    "*://mangadex.org/follows"
  ]
}