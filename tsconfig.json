{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "strict": true,
    "noImplicitAny": true,
    "removeComments": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "build",
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "dom"
    ]
  },
  "exclude": [
    "node_modules",
    "build",
    "coverage",
    "**/*/**.spec.ts"
  ],
  "include": [
    "src/**/*.ts"
  ]
}
